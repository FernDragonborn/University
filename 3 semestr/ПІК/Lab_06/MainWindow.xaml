<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lab_06" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введіть ваші дані:" FontWeight="Bold" Margin="0 0 0 10"/>

            <!-- Поле для текстового введення -->
            <Label>Ваше ім'я</Label>
            <TextBox x:Name="txtInput" Margin="0 0 0 10" />

            <!-- Поле для числового введення -->
            <Label>Ваш вік</Label>
            <TextBox x:Name="numInput" Margin="0 0 0 10"/>

            <!-- Список для вибору -->
            <Label>Ваша стать</Label>
            <ComboBox x:Name="cmbOptions" Margin="0 0 0 10">
                <ComboBoxItem Content="Чоловіча"/>
                <ComboBoxItem Content="Жіноча"/>
                <ComboBoxItem Content="Інше"/>
            </ComboBox>

            <!-- Кнопка для запуску події -->
            <Button Content="Виконати" Click="ExecuteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>